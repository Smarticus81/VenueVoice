{
  "name": "bpstudio",
  "private": true,
  "workspaces": [
    "apps/frontend",
    "packages/shared"
  ],
  "scripts": {
    "dev": "npm-run-all -p frontend:dev backend:dev voice:dev",
    "frontend:dev": "npm run -w apps/frontend dev",
    "backend:dev": "python -m uvicorn apps.backend.app.main:app --reload --port 8000",
    "voice:dev": "python apps/voice/dev.py",
    "voice:ws": "tsx apps/frontend/server/voice/ws-server.ts",
    "build": "npm run -w apps/frontend build",
    "embed:drinks": "npm run -w apps/frontend embed:drinks",
    "lint": "echo Use 'make lint'",
    "test": "echo Use 'make test'"
  },
  "devDependencies": {
    "@types/ws": "^8.18.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "tsx": "^4.20.3"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.54.0"
  }
}
